# Staging Environment Configuration
NODE_ENV=staging

# Database - Staging
DATABASE_URL=postgresql://airbar_staging:${POSTGRES_PASSWORD}@staging-db:5432/airbar_staging

# Redis - Staging
REDIS_URL=redis://staging-redis:6379

# API Configuration
PORT=3001
HOST=0.0.0.0

# Authentication - Staging Keys (Generate secure keys for staging)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
REFRESH_SECRET=${REFRESH_SECRET}
REFRESH_EXPIRES_IN=30d

# Frontend URLs
FRONTEND_URL=https://staging.airbar.com
CORS_ORIGIN=https://staging.airbar.com
VITE_API_URL=https://api-staging.airbar.com

# External APIs - Staging/Testing
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_TEST}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY_TEST}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_TEST}

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
STATIC_DIR=/app/static

# Email - Staging
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Rate Limiting
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_MAX_AGE=86400000

# Health Checks
HEALTH_CHECK_PATH=/api/health
METRICS_PATH=/api/metrics

# Security
TRUST_PROXY=true
SECURE_COOKIES=true
HTTPS_REDIRECT=true