{
  "name": "airbardashboard",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:db\" \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:db": "docker-compose -f infra/compose.dev.yml up -d postgres redis",
    "dev:api": "pnpm --filter @airbar/api dev",
    "dev:web": "pnpm --filter @airbar/web dev",
    "build:packages": "pnpm --filter @airbar/shared build && pnpm --filter @airbar/db build",
    "build:apps": "pnpm build:packages && pnpm --filter @airbar/api build && pnpm --filter @airbar/web build",
    "build:prod": "pnpm build:packages && pnpm --filter @airbar/api build && pnpm --filter @airbar/web build:prod",
    "build:analyze": "pnpm build:packages && pnpm --filter @airbar/api build && pnpm --filter @airbar/web build:analyze",
    "build": "pnpm build:apps",
    "test": "pnpm --recursive test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "docker:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:build:staging": "docker-compose -f docker-compose.staging.yml build",
    "docker:build:prod": "docker-compose -f docker-compose.production.yml build",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:up:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "docker:up:prod": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:down:staging": "docker-compose -f docker-compose.staging.yml down",
    "docker:down:prod": "docker-compose -f docker-compose.production.yml down",
    "docker:restart": "pnpm docker:down && pnpm docker:up",
    "docker:restart:staging": "pnpm docker:down:staging && pnpm docker:up:staging",
    "docker:restart:prod": "pnpm docker:down:prod && pnpm docker:up:prod",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:logs:api": "docker-compose -f docker-compose.dev.yml logs -f api",
    "docker:logs:web": "docker-compose -f docker-compose.dev.yml logs -f web",
    "docker:logs:staging": "docker-compose -f docker-compose.staging.yml logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.production.yml logs -f",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v --rmi all",
    "docker:clean:staging": "docker-compose -f docker-compose.staging.yml down -v --rmi all",
    "docker:clean:prod": "docker-compose -f docker-compose.production.yml down -v --rmi all",
    "docker:dev": "./scripts/docker-dev.sh up",
    "docker:status": "docker-compose -f docker-compose.dev.yml ps",
    "docker:status:staging": "docker-compose -f docker-compose.staging.yml ps",
    "docker:status:prod": "docker-compose -f docker-compose.production.yml ps",
    "db:push": "pnpm --filter @airbar/db db:push",
    "db:migrate": "pnpm --filter @airbar/db db:migrate",
    "db:seed": "pnpm --filter @airbar/db db:seed",
    "db:studio": "pnpm --filter @airbar/db db:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
