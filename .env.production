# Production Environment Configuration
NODE_ENV=production

# Database - Production
DATABASE_URL=postgresql://airbar_prod:${POSTGRES_PASSWORD}@prod-db:5432/airbar_production

# Redis - Production  
REDIS_URL=redis://prod-redis:6379

# API Configuration
PORT=3001
HOST=0.0.0.0

# Authentication - Production Keys (Must be set via secrets management)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
REFRESH_SECRET=${REFRESH_SECRET}  
REFRESH_EXPIRES_IN=7d

# Frontend URLs
FRONTEND_URL=https://airbar.com
CORS_ORIGIN=https://airbar.com
VITE_API_URL=https://api.airbar.com

# External APIs - Production
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
STATIC_DIR=/app/static

# Email - Production
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Rate Limiting - Stricter in production
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_MAX_AGE=3600000

# Health Checks
HEALTH_CHECK_PATH=/api/health
METRICS_PATH=/api/metrics

# Security - Production hardening
TRUST_PROXY=true
SECURE_COOKIES=true
HTTPS_REDIRECT=true
HSTS_MAX_AGE=31536000

# Performance
ENABLE_COMPRESSION=true
CACHE_MAX_AGE=86400

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
DATADOG_API_KEY=${DATADOG_API_KEY}