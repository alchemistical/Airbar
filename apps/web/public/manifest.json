{
  "name": "AirBar - Crowdshipping Platform",
  "short_name": "AirBar",
  "description": "Connect with travelers heading your way and save up to 70% on shipping costs",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "portrait-primary",
  "theme_color": "#01a268",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-96x96.png", 
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128", 
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "AirBar Dashboard - Desktop View"
    },
    {
      "src": "/screenshots/mobile-1.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "AirBar Dashboard - Mobile View"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "sizes": "390x844", 
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Send Package - Mobile Flow"
    }
  ],
  
  "categories": ["travel", "shipping", "logistics", "marketplace"],
  
  "shortcuts": [
    {
      "name": "Send Package",
      "short_name": "Send",
      "description": "Send a package with a traveler",
      "url": "/send-package",
      "icons": [
        {
          "src": "/icons/shortcut-send.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Add Trip",
      "short_name": "Trip", 
      "description": "Add your travel details",
      "url": "/add-trip",
      "icons": [
        {
          "src": "/icons/shortcut-trip.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Tracking",
      "short_name": "Track",
      "description": "Track your packages", 
      "url": "/dashboard/tracking",
      "icons": [
        {
          "src": "/icons/shortcut-tracking.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.airbar.app",
      "id": "com.airbar.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/airbar/id123456789"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "airbar",
      "url": "/handle?url=%s"
    }
  ]
}