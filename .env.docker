# Docker Development Environment Variables
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://airbar_user:airbar_password@postgres:5432/airbar_dev
POSTGRES_USER=airbar_user
POSTGRES_PASSWORD=airbar_password
POSTGRES_DB=airbar_dev
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
PORT=3001
HOST=0.0.0.0

# Authentication - Docker Development
JWT_SECRET=airbar-jwt-secret-dev-2025
JWT_EXPIRES_IN=7d
REFRESH_SECRET=airbar-refresh-secret-dev-2025
REFRESH_EXPIRES_IN=30d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Container Networking
API_URL=http://api:3001
WEB_URL=http://web:5173

# External APIs - Development
GOOGLE_MAPS_API_KEY=
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_test_

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_SECRET=airbar-session-secret-dev-2025
SESSION_MAX_AGE=86400000

# Health Checks
HEALTH_CHECK_PATH=/api/health

# PgAdmin (optional)
PGADMIN_DEFAULT_EMAIL=admin@airbar.com
PGADMIN_DEFAULT_PASSWORD=admin